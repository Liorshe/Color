<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#aabf74"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/namecaffe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/openTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open time:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/namecaffe"/>

    <TextView
            android:id="@+id/closeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="close time:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/openTime"
    />

    <TextView
            android:id="@+id/daysOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="days opened:"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_margin="16dp"
            app:layout_constraintLeft_toRightOf="@id/namecaffe"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


</androidx.constraintlayout.widget.ConstraintLayout>