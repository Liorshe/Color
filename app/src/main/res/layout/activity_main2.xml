<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">


    <TextView android:id="@+id/tvcolor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="COLOR"
              android:textSize="50sp"

    />


    <Button android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/tvcolor"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#008000"
            android:background="#008000"
    />

    <Button android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/tvcolor"
            app:layout_constraintStart_toEndOf="@id/btn1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#80004D"
            android:background="#80004D"
    />

    <Button android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/tvcolor"
            app:layout_constraintStart_toEndOf="@id/btn2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#F00000"
            android:background="#F00000"
    />

    <Button android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#13D3C3"
            android:background="#13D3C3"
    />

    <Button android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@id/btn4"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#E91E63"
            android:background="#E91E63"
    />

    <Button android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@id/btn5"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#FF3D00"
            android:background="#FF3D00"
    />

    <Button android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#FFC107"
            android:background="#FFC107"
    />

    <Button android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn7"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#0728FF"
            android:background="#0728FF"
    />

    <Button android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn8"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#2A3279"
            android:background="#2A3279"
    />

    <Button android:id="@+id/btn10"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#884843"
            android:background="#884843"
    />

    <Button android:id="@+id/btn11"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@id/btn10"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#A34F6B"
            android:background="#A34F6B"
    />

    <Button android:id="@+id/btn12"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@id/btn11"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:text="#8D10EC"
            android:background="#8D10EC"
    />


</androidx.constraintlayout.widget.ConstraintLayout>